<!--index.wxml-->
<view class="container">
	<image class='background' src="/asset/pic/background.png" mode="aspectFill"></image>
	<!-- <view class="background">
		<view class="title">上应风筝</view>
	</view> -->
	<view class="main">
		<swiper indicator-dots="true" class="swiper" circular>
			<swiper-item>
				<view class="box">
					<image src="../../asset/pic/activity_logo.jpg" style="width:100%;height:100%;" bindtap="go_temp"></image>
				</view>
			</swiper-item>
			<swiper-item>
				<view class="box">
					<image src="../../asset/pic/logo.jpg" style="width:100%;height:100%;"></image>
				</view>
			</swiper-item>
		</swiper>
		<view class="menuBlock">
			<view wx:for="{{menu_list}}" wx:key="idx" data-id="{{item.id}}"
			 data-index="{{index}}" class="menu_cell" bindtap="move">
				<image style="{{index===selected ? animation_data: '' }}" src="{{item.iconPath}}"></image>
				<view class="menu_cell_text">{{item.text}}</view>
			</view>
		</view>
	</view>
</view>